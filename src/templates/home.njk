<!doctype html>
<html lang="ru">

<head>
    <meta charset="utf-8">
    <title>{{ title }}</title>
    <meta name="description" content="{{ renderData.description or description or metadata.description }}">
    <style>
    body {

        font-family: sans-serif;
    }
    </style>
    <link rel="stylesheet" href="{{ '/css/uikit.min.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/style.css' }}" media="print" onload="this.media='all'">
    <link rel="stylesheet" href="{{ '/css/prism.css' }}" media="print" onload="this.media='all'">
</head>

<body>
    <div class="uk-section uk-section-small uk-background-primary uk-light">
        <div class="uk-container uk-container-small uk-container-center">
            <h1 class="uk-margin-remove-top">{{ title }}</h1>
        </div>
    </div>
    <div class="uk-section">
        <div class="uk-container uk-container-small uk-container-center uk-background-default uk-padding">
            {{ content | safe }}
        </div>
    </div>
    {% include "partials/footer.njk" %}
    <script type='text/javascript' src='{{ '/js/uikit.min.js' }}'></script>
    <script type='text/javascript' src='{{ '/js/uikit-icons.min.js' }}'></script>
</body>

</html>