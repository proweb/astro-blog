    <link rel="stylesheet" href="{{ '/css/uikit.min.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/style.css' }}">
    <link rel="stylesheet" href="{{ '/css/prism.css' }}">
</head>

<body>
      {% include "partials/header.njk" %}
